{% extends 'GameaffinityBundle:Front:FrontBase.html.twig' %}

{% block head %}{{ parent() }}{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}


{% block javascripts %}{{ parent() }}{% endblock %}

{% block title %}Perfil de usuario{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <h1>Perfil de usuario</h1>
        <p>Nombre: {{ app.user.nombre }}</p>
        <p>Email: {{ app.user.username }}</p>
        <p>Role: {{ app.user.role.nombre }}</p>
        <p>Registrado el: {{ app.user.fechaRegistro|date('d/m/Y') }}</p>
        <p>Juegos favoritos:</p>
        <ul>
            {% for favorito in app.user.juegosFavoritos %}
                <li><a href="{{ path('game_info', {'id': favorito.id}) }}">{{ favorito.nombre }}</a></li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
