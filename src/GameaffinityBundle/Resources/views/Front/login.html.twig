{% extends 'GameaffinityBundle:Front:FrontBase.html.twig' %}

{% block head %}{{ parent() }}{% endblock %}
{% block title %}Formulario Login{% endblock %}


{% block body %}
    {{ parent() }}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" class="dark-theme-input" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" class="dark-theme-input" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit">login</button>
    </form>
        <p><a href="{{ path('register') }}">Registrarse</a></p>

{% endblock %}   