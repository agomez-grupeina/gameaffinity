{% extends 'GameaffinityBundle:Back:BackBase.html.twig' %}

{% block head %}{{ parent() }}{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}


{% block javascripts %}{{ parent() }}{% endblock %}

{% block title %}Gameaffinity Admin Juegos{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="page-header">
            <h3>GameAffinity administrar Juegos </h3>
            <a href="{{ path('back_juegos_insert') }}"><button type="button" class="btn btn-primary btn-title">Nuevo</button></a>
        </div> 
        <table class="table">
            <tr><th>ID</th><th>Nombre</th><th>Lanzamiento</th><th>Plataformas</th><th>Generos</th><th>Puntuacion</th><th>Desarrolladora</th><th>Portada</th><th></th></tr>
                    {% if juegos is defined %}
                        {% for juego in juegos %}
                    <tr>
                        <td>{{ juego.id }}</td>
                        <td>{{ juego.nombre }}</td>
                        <td>{{ juego.fechaLanzamiento|date('d/m/Y') }}</td>
                        <td>
                            {% for plataforma in juego.plataformas %}
                                -
                                {{ plataforma }}
                            {% endfor %}
                        </td>
                        <td>
                            {% for genero in juego.generos %}
                                -
                                {{ genero }}
                            {% endfor %}
                        </td>
                        <td>{{ juego.puntuacion }}</td>
                        <td>{{ juego.desarrolladora }}</td>
                        <td>{{ juego.portada }}</td>
                        <td>
                            <a href="{{ path('back_juegos_edit', {'id': juego.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href=""><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </table>


    </div>
{% endblock %}
