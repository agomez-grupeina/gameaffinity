{% extends 'GameaffinityBundle:Back:BackBase.html.twig' %}

{% block head %}{{ parent() }}{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}


{% block javascripts %}{{ parent() }}{% endblock %}

{% block title %}Gameaffinity Admin Usuarios{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="page-header">
            <h3>GameAffinity admin usuarios</h3>
            <a href="{{ path('form_usuarios') }}"><button type="button" class="btn btn-primary btn-title">Nuevo</button></a>
        </div>    
        <table class="table">
            <tr><th>ID</th><th>Nombre</th><th>Email</th><th>Fecha Registro</th><th>Role</th><th></th></tr>

            {# Foreach para rellenar la tabla con usuarios db #}
            {% if usuarios is defined %}
                {% for usuario in usuarios %}
                    <tr>
                        <td>{{ usuario.id }}</td>
                        <td>{{ usuario.nombre }}</td>
                        <td>{{ usuario.email }}</td>
                        <td>{{ usuario.fechaRegistro|date('d-m-Y') }}</td>
                        <td>{{ usuario.role.nombre }}</td>
                        <td>
                            <a href="{{ path('edit_usuarios', {'id': usuario.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href=""><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}

        </table>
    </div>                
</div>

{% endblock %}