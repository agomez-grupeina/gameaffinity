{% extends 'GameaffinityBundle:Back:BackBase.html.twig' %}

{% block head %}{{ parent() }}{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}


{% block javascripts %}{{ parent() }}{% endblock %}

{% block title %}Gameaffinity Admin Generos / Plataformas{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="plataforma-genero-divisor">
            <div class="page-header">
                <h3>GameAffinity admin plataformas</h3>
                {#            <a href="{{ path('form_usuarios') }}"><button type="button" class="btn btn-primary btn-title">Nuevo</button></a>#}
            </div>   
            <p><b>Insertar plataforma:</b>
            <form class="form-inline" role="form" action="/admin/plataformas/insert" name="form-plataforma">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control small-input" name="nombre" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <label for="lanzamiento">Lanzamiento:</label>
                    <input type="number" class="form-control smallest-input" name="dia" placeholder="dd" min="1" max="31" required>
                    <input type="number" class="form-control smallest-input" name="mes" placeholder="mm" min="1" max="12" required>
                    <input type="number" class="form-control small-input" name="anyo" placeholder="yyyy" min="1850" required>
                </div>
                <button type="submit" class="btn btn-primary">Insertar</button>
            </form>
            </p>
            <table class="table">
                <tr><th>ID</th><th>Nombre</th><th>Lanzamiento</th><th></th></tr>
                        {% if plataformas is defined %}
                            {% for plataforma in plataformas %}
                        <tr>
                            <td>{{ plataforma.id }}</td>
                            <td>{{ plataforma.nombre }}</td>
                            <td>{{ plataforma.fechaLanzamiento|date('d/m/Y') }}</td>
                            <td>
                                <a href="{{ path('back_plataformas_edit', {'id': plataforma.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a href=""><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </table>
        </div>
        <div class="plataforma-genero-divisor">
            <div class="page-header">
                <h3>GameAffinity admin generos</h3>
            </div>  
            <p><b>Insertar Genero:</b>
            <form class="form-inline" role="form" action="/admin/generos/insert" name="form-genero">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                </div>
                <button type="submit" class="btn btn-primary">Insertar</button>
            </form>
            </p>
            <table class="table">
                <tr><th>ID</th><th>Nombre</th><th></th></tr>
                        {% if generos is defined %}
                            {% for genero in generos %}
                        <tr>
                            <td>{{ genero.id }}</td>
                            <td>{{ genero.nombre }}</td>                       
                            <td>
                                <a href="{{ path('back_generos_edit', {'id': genero.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                                <a href=""><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
